{{> default }}

<div class="container">
    <form action="/results" method="POST">
        <div class="form-group">
            <label for="nameInput">Name</label>
            <input type="text" name="name" class="form-control" id="nameInput" aria-describedby="Name">
        </div>
        <div class="form-group">
            <label for="emailInput">Email</label>
            <input type="email" name="email" class="form-control" id="emailInput">
        </div>
        <div class="form-group">
            <label for="commentInput">Comments</label>
            <textarea class="form-control" name="comments" id="commentInput" rows="3"></textarea>
        </div>
        <button type="submit" id="subBtn" class="btn btn-primary">Submit</button>
    </form>
</div>